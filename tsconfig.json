{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": false,
    "lib": ["es2015", "es2016"],
    "outDir": "./lib",
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["./src/**/*.ts"],
  "compileOnSave": false
}
